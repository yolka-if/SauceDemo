<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Test" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="tests.AnnotationTransformer"/>
        <listener class-name="tests.TestListener"/>
    </listeners>
    <test name="Chrome">
        <groups>
            <run>
                <include name="slow" />
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest" />
            <class name="tests.CartTest" />
            <class name="tests.CheckoutOverviwTest" />
            <parameter name="browser" value="chrome"></parameter>
        </classes>
    </test> <!--Ñ‚-->
    <test name="Firefox">
        <classes>
            <class name="tests.ProductTest" />
            <class name="tests.CheckoutTest" />
            <parameter name="browser" value="firefox"></parameter>
        </classes>
    </test> <!-- Test -->
</suite>
